<!-- views/index.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>FeliniCoin Trivia Game</title>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/css/styles.css">
</head>
<body>
    <div class="background-stars" id="star-container"></div>
    <div class="container">
        <!-- Navigation -->
        <nav class="top-navigation">
            <a href="/" class="nav-link">Home</a>
            <a href="/withdraw" class="nav-link">Withdraw</a>
            <a href="https://stellarterm.com/exchange/FELNY-GCXDWF3K3J2T7ROWH7BBTZHG3DMKAVJBQB5M73OOMOU65HQBZVWVCCAI/XLM-native" class="nav-link" target="_blank">Sell Tokens</a>
            <a href="/about" class="nav-link">About</a>
            <% if (user) { %>
                <a href="/logout" class="nav-link">Logout</a>
            <% } else { %>
                <a href="/auth/google" class="nav-link">Login</a>
            <% } %>
        </nav>

        <!-- Header Section -->
        <section class="header-section">
            <img src="/images/FeliniCoin_small.png" alt="FeliniCoin Logo" class="logo">
            <h1>FeliniCoin</h1>
            <p>Earn crypto by answering intriguing questions</p>
        </section>

        <!-- Call-to-Action Button -->
        <% if (!user) { %>
            <button class="cta-button" id="start-game">Login to Start</button>
        <% } else { %>
            <a href="/start" class="cta-button">Start Earning FELNY</a>
        <% } %>

        <!-- Rules Section -->
        <section class="rules-section">
            <h2>How to Play</h2>
            <ul class="rules-list">
                <li>Answer fascinating AI-generated questions</li>
                <li>Earn FELNY tokens for each correct response</li>
                <li>Withdraw tokens to your Stellar wallet</li>
            </ul>
        </section>
    </div>

    <script src="/js/script.js"></script>
</body>
</html>
